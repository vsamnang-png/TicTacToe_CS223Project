import javafx.geometry.Pos;
import javafx.scene.Parent;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.layout.GridPane;
import javafx.scene.layout.VBox;
import javafx.scene.text.Font;

public class GameView {
    private Button[][] buttons = new Button[3][3];
    private Label statusLabel = new Label();
    private Button resetButton = new Button("Reset");
    private VBox root = new VBox(15);

    public GameView() {
        statusLabel.setFont(new Font(20));
        statusLabel.setText("X's Turn");
        GridPane grid = new GridPane();
        grid.setAlignment(Pos.CENTER);

        for (int r = 0; r < 3; r++) {
            for (int c = 0; c < 3; c++) {
                Button btn = new Button("");
                btn.setPrefSize(100, 100);
                btn.setFont(new Font(32));
                buttons[r][c] = btn;
                grid.add(btn, c, r);
            }
        }
        root.setAlignment(Pos.CENTER);
        root.getChildren().addAll(statusLabel, grid, resetButton);
    }

    public Parent getRoot() { return root; }
    public Button getButton(int r, int c) { return buttons[r][c]; }
    public Button getResetButton() { return resetButton; }
    public void setStatus(String text) { statusLabel.setText(text); }
    public void disableBoard() {
        for (Button[] row : buttons) for (Button b : row) b.setDisable(true);
    }
    public void resetBoard() {
        for (Button[] row : buttons) {
            for (Button b : row) {
                b.setText("");
                b.setDisable(false);
            }
        }
    }
}
